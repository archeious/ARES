{{ define "title" }}Edit Series - {{.series.Name}}{{ end }}

{{ define "content" }} 

<form class="form-horizontal" method="POST">
    <fieldset>
        <legend>Edit Series - {{.series.Name}}</legend>
        <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="name" id="name" placeholder="name" value="{{ .series.Name }}">
            </div>
        </div>
        <div class="form-group">
            <label for="name" class="col-lg-2 control-label">Japanese Name</label>
            <div class="col-lg-10">
                <input type="text" class="form-control" name="jname" id="jname" placeholder="jname" value="{{.series.JName}}">
            </div>
        </div>
        <div class="form-group">
            <label for="synopsis" class="col-lg-2 control-label">Synopsis</label>
            <div class="col-lg-10">
                <textarea rows=5 class="form-control" name="synopsis" id="synopsis" placeholder="synopsis">{{.series.Synopsis}}</textarea>
            </div>
        </div>
        <div class="form-group">
            <label for="imdbid" class="col-lg-2 control-label">IMDB ID</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" name="imdbid" id="name" placeholder="IMDB ID" value="{{.series.ExtIDs.imdb}}">
            </div>
            <label for="malid" class="col-lg-2 control-label">My Anime List ID</label>
            <div class="col-lg-4">
                <input type="text" class="form-control" name="malid" id="malid" placeholder="malid" value="{{.series.ExtIDs.mal}}">
            </div>
        </div>
        <div class="form-group">
            <div class="col-lg-10 col-lg-offset-2">
                <button type="reset" class="btn btn-default">Cancel</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </div>
        <input type="hidden" name="id" value="{{.series.Id}}">
    </fieldset>
</form>
{{ end }}

